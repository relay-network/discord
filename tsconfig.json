{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "types": ["handlebars", "mocha", "node"]
  },
  "include": ["src/**/*.ts", "*.ts", "mocha/**/*.ts"],
  "exclude": ["node_modules"]
}
